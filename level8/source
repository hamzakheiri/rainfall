#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Global pointers
char *auth = NULL;
char *service = NULL;

int main(int argc, char **argv)
{
    char buffer[128];

    while (1)
    {
        // Print current state of auth and service pointers
        printf("%p, %p \n", auth, service);

        // Read user input
        if (fgets(buffer, 128, stdin) == NULL)
            break;

        // Command: "auth [username]"
        // Allocates 4 bytes for auth structure
        if (strncmp(buffer, "auth ", 5) == 0)
        {
            auth = malloc(4);
            *auth = 0;

            // If username is less than 30 chars, copy it to auth
            if (strlen(buffer + 5) <= 30)
                strcpy(auth, buffer + 5);
        }

        // Command: "reset"
        // Frees the auth memory
        if (strncmp(buffer, "reset", 5) == 0)
        {
            free(auth);
        }

        // Command: "service [name]"
        // Allocates memory for service name using strdup
        if (strncmp(buffer, "service", 6) == 0)
        {
            // strdup allocates strlen(str) + 1 bytes
            service = strdup(buffer + 7);
        }

        // Command: "login"
        // VULNERABLE: Checks auth + 32 bytes (out of bounds!)
        if (strncmp(buffer, "login", 5) == 0)
        {
            // The critical check: looks 32 bytes beyond auth pointer
            if (*(int *)(auth + 32))
            {
                // If non-zero at auth + 32, give shell
                system("/bin/sh");
            }
            else
            {
                // Otherwise ask for password (dead end)
                fwrite("Password:\n", 1, 10, stdout);
            }
        }
    }

    return 0;
}

